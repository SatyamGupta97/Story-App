<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StoryPartActivity">

    <Button
        android:id="@+id/buttonView1"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="पहला भाग"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/silver"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        />

    <Button
        android:id="@+id/buttonView2"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="दूसरा भाग"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/silver"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/buttonView3"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="तीसरा भाग"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/silver"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
         />

    <Button
        android:id="@+id/buttonView4"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="चौथा भाग"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/silver"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
         />
</LinearLayout>